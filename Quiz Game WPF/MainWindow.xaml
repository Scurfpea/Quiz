<Window x:Class="Quiz_Game_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Game_WPF"
        mc:Ignorable="d"
        Title="Quiz Game" Height="600" Width="800">
    <Canvas Name = "myCanvas" Background="DarkGray">

        <Label Name= "scoreText" FontSize = "18">Score: 0/10</Label>
        <Label Name= "questionOrder" FontSize = "18" Canvas.Left="329">Score: Questions</Label>

        <Image Name="qImage" Source="Images/1.png" Stretch="Uniform" Height= "286" Width= "572" Canvas.Left="124" Canvas.Top="91" />
        <TextBlock Name="txtQuestion" TextAlignment="Center" Padding="3" FontSize="20" Width =" 572" TextWrapping="Wrap" Canvas.Left="104" Canvas.Top="330">
            Det er quiz tid. Klik på en af knapperne for at svare på spørgsmålet.
        </TextBlock>

        <Button Background="DarkSalmon" FontSize="14" Click="checkAnswer" Name="ans1" Width="200" Height="50" Content="Answer 1" Tag="0" Canvas.Left="104" Canvas.Top="434" />
        <Button Background="DarkSalmon" FontSize="14" Click="checkAnswer" Name="ans2" Width="200" Height="50" Content="Answer 2" Tag="0" Canvas.Left="104" Canvas.Top="500" />
        <Button Background="DarkSalmon" FontSize="14" Click="checkAnswer" Name="ans3" Width="200" Height="50" Content="Answer 3" Tag="0" Canvas.Left="476" Canvas.Top="434" />
        <Button Background="DarkSalmon" FontSize="14" Click="checkAnswer" Name="ans4" Width="200" Height="50" Content="Answer 4" Tag="0" Canvas.Left="476" Canvas.Top="500" />
    </Canvas>
</Window>
